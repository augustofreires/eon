#!/usr/bin/expect -f

set timeout 30

spawn ssh root@31.97.28.231

expect {
    "Enter passphrase for key" {
        send "\r"
        exp_continue
    }
    "password:" {
        send "62uDLW4RJ9ae28EPVfp5yzT##\r"
        exp_continue
    }
    "yes/no" {
        send "yes\r"
        exp_continue
    }
    "# " {
        puts "🔍 Checking index.html content..."
        send "cat /var/www/html/index.html\r"
        expect "# "

        puts "🔍 Checking asset manifest..."
        send "cat /var/www/html/asset-manifest.json\r"
        expect "# "

        puts "🔍 Checking static files..."
        send "ls -la /var/www/html/static/\r"
        expect "# "

        send "exit\r"
    }
}

puts "✅ Content check completed"