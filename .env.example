# ===========================================
# TEMPLATE DE VARIÁVEIS DE AMBIENTE
# ===========================================
# Copie este arquivo para .env e configure os valores

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=deriv_bots_prod
DB_USER=postgres
DB_PASSWORD=sua_senha_super_segura_aqui

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=seu_jwt_secret_super_seguro_aqui

# ===========================================
# DERIV API CONFIGURATION
# ===========================================
# Obtenha em: https://developers.deriv.com/
DERIV_APP_ID=seu_deriv_app_id
DERIV_OAUTH_CLIENT_ID=seu_oauth_client_id
DERIV_OAUTH_CLIENT_SECRET=seu_oauth_client_secret

# ===========================================
# APPLICATION URLS
# ===========================================
# Para desenvolvimento local
# REACT_APP_API_URL=http://localhost:5001

# Para produção (substitua pelo seu IP/domínio)
REACT_APP_API_URL=http://SEU_IP_DO_VPS:5001
# ou
# REACT_APP_API_URL=https://seu-dominio.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=5001

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://redis:6379

