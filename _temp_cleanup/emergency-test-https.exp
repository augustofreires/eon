#!/usr/bin/expect -f

spawn ssh -o PasswordAuthentication=yes -o PreferredAuthentications=password root@31.97.28.231

expect "password:"
send "62uDLW4RJ9ae28EPVfp5yzT##\r"
expect "# "

# Test if nginx can reach the server via IPv6
send "curl -s 'http://[::1]:3001/api/auth/login' -H 'Content-Type: application/json' -d '{\"email\":\"admin@iaeon.com\",\"password\":\"123456\"}'\r"
expect "# "

# Update nginx config to use IPv6
send "sed -i 's|proxy_pass http://localhost:3001|proxy_pass http://[::1]:3001|g' /etc/nginx/sites-available/iaeon.site\r"
expect "# "

send "nginx -t && systemctl reload nginx\r"
expect "# "

# Test the fixed API
send "curl -s -k 'https://iaeon.site/api/auth/login' -H 'Content-Type: application/json' -d '{\"email\":\"admin@iaeon.com\",\"password\":\"123456\"}'\r"
expect "# "

send "exit\r"
expect eof