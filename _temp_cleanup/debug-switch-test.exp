#!/usr/bin/expect -f

set timeout 60

# Connect to VPS
spawn ssh -o StrictHostKeyChecking=no -o PreferredAuthentications=password -o PubkeyAuthentication=no root@31.97.28.231

# Handle password prompt
expect {
    "password:" {
        send "62uDLW4RJ9ae28EPVfp5yzT##\r"
        exp_continue
    }
    "#" {
        # Connected successfully
    }
    timeout {
        puts "Connection timeout"
        exit 1
    }
}

# First, check the current database state
send "sudo -u postgres psql eon_platform -c \"SELECT id, email, deriv_account_id, deriv_is_virtual, deriv_currency FROM users WHERE email = 'cliente@iaeon.com';\"\r"
expect "#"

# Restart PM2 to clear any caches
send "cd /root/eon && pm2 restart iaeon-server\r"
expect "#"

# Wait for restart
send "sleep 5\r"
expect "#"

# Check PM2 status
send "pm2 status\r"
expect "#"

# Monitor logs for any new switch requests
send "echo 'Monitoring for switch-account requests in the next 30 seconds...'\r"
expect "#"

send "timeout 30 pm2 logs iaeon-server --raw | grep -i switch || echo 'No switch requests detected'\r"
expect "#"

send "exit\r"
expect eof